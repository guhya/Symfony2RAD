{% extends 'admin/base.html.twig' %} 

{% block content %}

<div class="row">
	<div class="col-lg-12">
		<h3 class="page-header">
			<i class="fa fa-gift"></i> Product List
		</h3>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i><a href="{{ WEB_ROOT }}/admin/dashboard">Home</a></li>
			<li><i class="fa fa-list"></i>Product List</li>
		</ol>
	</div>
</div>


<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading"> Search Product </header>
			<div class="panel-body">
				<form class="form-inline" role="form" method="get" action="{{ WEB_ROOT }}/admin/product/list">				
					<div class="form-group">
						<select name="c" id="c" class="form-control" required="required">
							<option value="name" {% if param.c is sameas("name") %}selected{% endif %}>Name</option>
							<option value="about" {% if param.c is sameas("description") %}selected{% endif %}>Description</option>				
						</select>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" required="required" name="k" id="c" value="{{ param.k }}" />
					</div>
					<button type="submit" class="btn btn-primary">Search</button>
					<button type="button" onclick="javascript:top.location='{{ WEB_ROOT }}/admin/product/write?{{ param.parameter }}'" class="btn btn-lg btn-success pull-right">
						<i class="fa fa-pencil">&nbsp;</i> Write
					</button>
				</form>
			</div>
		</section>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<section class="panel table-responsive">
			<table class="table table-striped table-advance table-hover">
				<tbody>
					<tr>
						<th><i class="fa fa-info-circle">&nbsp;</i> Product Name</th>
						<th class=""><i class="fa fa-comment">&nbsp;</i> Product Description</th>
						<th><i class="fa fa-bars">&nbsp;</i> Category</th>
						<th class="" style="text-align: center;"><i class="fa fa-gears">&nbsp;</i> Action</th>
					</tr>
					
					{% if product is not empty %}			
						{% for i in product %}
							<tr>
								{% set no = paging.totalRows - loop.index0 - (paging.current - 1) * paging.pageSize %}
								<td onclick="location.href='{{ WEB_ROOT }}/admin/product/detail?seq={{ i.seq }}&{{ param.parameter }}'">
									<a href="{{ WEB_ROOT }}/admin/product/detail?seq={{ i.seq }}&{{ param.parameter }}">
										{{ i.name }}
									</a>
								</td>
								<td class="">
									{% set desc = i.description|striptags %}
									{% set desc = desc|replace({"&nbsp;":" ", "&quot;":"\""}) %}
									{{ desc|length > 80 ? desc|slice(0, 80) ~ '...' : desc }}
								</td>
								<td class="">{{ i.category }}</td>
								<td class="">
									<div class="btn-group pull-right">
										<a href="{{ WEB_ROOT }}/admin/product/detail?seq={{ i.seq }}&{{ param.parameter }}" class="btn btn-info"><i class="fa fa-search"></i> Detail</a>
										<a href="{{ WEB_ROOT }}/admin/product/edit?seq={{ i.seq }}&{{ param.parameter }}" class="btn btn-success"><i class="fa fa-edit"></i> Edit</a>
									</div>
								</td>
							</tr>
						{% endfor %}
					{% endif %}
					{% if product is empty %}			
						<tr>
							<td colspan="4">No Data</td>
						</tr>		    
					{% endif %}					

				</tbody>
			</table>
		</section>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="text-center">
			<ul class="pagination">
				{{ paging.paging|raw }}
			</ul>
		</div>
	</div>
</div>

{% endblock %} 

{% block js%}
<script>
</script>
{% endblock %}
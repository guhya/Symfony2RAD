{% extends 'admin/base.html.twig' %} 

{% block content %}

<div class="row">
	<div class="col-lg-12">
		<h3 class="page-header">
			<i class="fa fa-gift"></i> Product Management
		</h3>
		<ol class="breadcrumb">
			<li><i class="fa fa-home"></i><a href="{{ WEB_ROOT }}/admin/dashboard">Home</a></li>
			<li><i class="fa fa-edit"></i>Product Management</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<section class="panel">
			<header class="panel-heading">
            	Product Information
			</header>		
			<div class="panel-body">
				<h1></h1>
				<div class="form">
					<form class="form-validate form-horizontal" id="productForm" name="productForm" method="post">
						<input type="hidden" name="p"					value="{{ paging.current }}"/>
						<input type="hidden" name="seq"					value="{{ product.seq }}"/>
						<input type="hidden" name="c"					value="{{ param.c }}"/>
						<input type="hidden" name="k"					value="{{ param.k }}"/>
						
						<input type="hidden" name="deletedFiles" 		value=""/>
						
						<input type="hidden" name="thumbnailImageSeq" 	value="{{ product.thumbnailImage }}"/>
						<input type="hidden" name="mainImageSeq" 		value="{{ product.mainImageSeq }}"/>
						<input type="hidden" name="image1Seq" 			value="{{ product.image1 }}"/>
						<input type="hidden" name="image2Seq" 			value="{{ product.image2 }}"/>
						<input type="hidden" name="image3Seq" 			value="{{ product.image3 }}"/>
						<input type="hidden" name="brochureSeq" 		value="{{ product.brochure }}"/>
						<input type="hidden" name="attachmentSeq" 		value="{{ product.attachment }}"/>
						
						<div class="form-group row">
							<label for="thumbnailImage" class="control-label col-lg-2">Thumbnail Image</label>
							<div class="col-lg-4">
								<div class="fileList thumbnailImage">
									{% if product.thumbnailImage is not empty %}
										<img class="lazy" data-original="{{ WEB_ROOT }}/image/{{ product.thumbnailImage }}" width="200" />										
										<p class="help-block">
											<a href="{{ WEB_ROOT }}/download/{{ product.thumbnailImage }}"/><span>{{ product.thumbnailImageOriginalName }}</span></a>
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.thumbnailImage }}', 'thumbnailImage');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<p style="display:none"><img src="" id="imgthumbnailImage" alt="thumbnailImage"/></p>						
										<input type="file" id="thumbnailImage" name="thumbnailImage" title="file" class="file" />										
										<p class="help-block">*Only (GIF, JPG, PNG).</p>
									{% endif %}									
								</div>
							</div>
						</div>
						<div class="form-group row">
							<label for="mainImage" class="control-label col-lg-2">Main Image</label>
							<div class="col-lg-4">
								<div class="fileList mainImage">
									{% if product.mainImage is not empty %}
										<img class="lazy" data-original="{{ WEB_ROOT }}/image/{{ product.mainImage }}" width="200" />										
										<p class="help-block">
											<a href="{{ WEB_ROOT }}/download/{{ product.mainImage }}"/><span>{{ product.mainImageOriginalName }}</span></a>
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.mainImage }}', 'mainImage');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<p style="display:none"><img src="" id="imgmainImage" alt="mainImage"/></p>						
										<input type="file" id="mainImage" name="mainImage" title="mainImage" class="file" />										
										<p class="help-block">*Only (GIF, JPG, PNG).</p>
									{% endif %}									
								</div>
							</div>
						</div>
						<div class="form-group row">
							<label for="image1" class="control-label col-lg-2">Image 1</label>
							<div class="col-lg-2">
								<div class="fileList image1">
									{% if product.image1 is not empty %}
										<img class="lazy" data-original="{{ WEB_ROOT }}/image/{{ product.image1 }}" width="200" />										
										<p class="help-block">
											<a href="{{ WEB_ROOT }}/download/{{ product.image1 }}"/><span>{{ product.image1OriginalName }}</span></a>
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.image1 }}', 'image1');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<p style="display:none"><img src="" id="imgimage1" alt="image1"/></p>						
										<input type="file" id="image1" name="image1" title="file" class="file" />										
										<p class="help-block">*Only (GIF, JPG, PNG).</p>
									{% endif %}									
								</div>
							</div>
							<label for="image2" class="control-label col-lg-2">Image 2</label>
							<div class="col-lg-2">
								<div class="fileList image2">
									{% if product.image2 is not empty %}
										<img class="lazy" data-original="{{ WEB_ROOT }}/image/{{ product.image2 }}" width="200" />										
										<p class="help-block">
											<a href="{{ WEB_ROOT }}/download/{{ product.image2 }}"/><span>{{ product.image2OriginalName }}</span></a>
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.image2 }}', 'image2');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<p style="display:none"><img src="" id="imgimage2" alt="image2"/></p>						
										<input type="file" id="image2" name="image2" title="image2" class="file" />										
										<p class="help-block">*Only (GIF, JPG, PNG).</p>
									{% endif %}									
								</div>
							</div>
							<label for="image3" class="control-label col-lg-2">Image 3</label>
							<div class="col-lg-2">
								<div class="fileList image3">
									{% if product.image3 is not empty %}
										<img class="lazy" data-original="{{ WEB_ROOT }}/image/{{ product.image3 }}" width="200" />										
										<p class="help-block">
											<a href="{{ WEB_ROOT }}/download/{{ product.image3 }}"/><span>{{ product.image3originalName }}</span></a>
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.image3 }}', 'image3');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<p style="display:none"><img src="" id="imgimage3" alt="image3"/></p>						
										<input type="file" id="image3" name="image3" title="image3" class="file" />										
										<p class="help-block">*Only (GIF, JPG, PNG).</p>
									{% endif %}									
								</div>
							</div>
						</div>
						
						<div class="form-group row">
							<label for="name" class="control-label col-lg-2">Name <span class="required">*</span></label>
							<div class="col-lg-4">
								<input class="form-control" id="name" name="name" minlength="4" maxlength="200" type="text" required="true" value="{{ product.name }}">
								<p class="help-block"></p>
							</div>
						</div>
						
						<div class="form-group row">
							<label for="categories" class="control-label col-lg-2">Category <span class="required">*</span></label>
							<div class="col-lg-4">
								<select class="form-control" id="categories" name="categories" required="true">
									<option value="">Select Category</option>
									{% for i in category %}
										<option value="{{ i.seq }}" {% if i.seq == product.category %}selected{% endif %}>{{ i.padding[5:] }} {{ i.name }}</option>
									{% endfor %}
								</select>
								<p class="help-block"></p>
							</div>
						</div>
						
						<div class="form-group row">
							<label for="about" class="control-label col-lg-2">Description</label>
							<div class="col-lg-10">
								<textarea class="form-control" id="description" name="description" rows="10">{{ product.description}}</textarea>								
								<p class="help-block"></p>
							</div>
						</div>
						
						<div class="form-group row">
							<label for="tags" class="control-label col-lg-2">Tags</label>
							<div class="col-lg-10">
								{% for i in tag %}
									<input type="checkbox" id="tags_{{ loop.index }}" name="tags[]" value="{{ i.seq }}" 
									{% for j in product.tags %}									
										{% if i.seq == j.seq %}checked{% endif %}
									{% endfor %}
									>
									<label for="tags_{{ loop.index }}">{{ i.name }}</label>&nbsp;&nbsp;
								{% endfor %}
								<p class="help-block"></p>
							</div>
						</div>						
						
						<div class="form-group row">
							<label for="brochure" class="control-label col-lg-2">Brochure</label>
							<div class="col-lg-4">
								<div class="fileList brochure">
									{% if product.brochure is not empty %}
										<p class="help-block">											
											<a href="{{ WEB_ROOT }}/download/{{ product.brochure }}"/><span>{{ product.brochureOriginalName }}</span></a>										
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.brochure }}', 'brochure');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<input type="file" id="brochure" name="brochure" title="brochure" class="file" />										
										<p class="help-block">*Only (PDF).</p>
									{% endif %}									
								</div>
							</div>
							
							<label for="attachment" class="control-label col-lg-2">Attachment</label>
							<div class="col-lg-4">
								<div class="fileList attachment">
									{% if product.attachment is not empty %}
										<p class="help-block">											
											<a href="{{ WEB_ROOT }}/download/{{ product.attachment }}"/><span>{{ product.attachmentOriginalName }}</span></a>										
											<a href="javascript:void(0);" onclick="deleteFile('{{ product.attachment }}', 'attachment');"><i class="alert-danger fa fa-remove"></i></a>
										</p>							
									{% else %}
										<input type="file" id="attachment" name="attachment" title="attachment" class="file" />										
										<p class="help-block">*Only (PDF, ZIP, RAR).</p>
									{% endif %}									
								</div>
							</div>
						</div>
						
						<div class="form-group">
							<div class="col-lg-offset-2 col-lg-10">
								<input type="submit" name="submitHandler" style="display:none"/>
								<button class="btn btn-primary" type="button" onclick="saveProc();">Save</button>
								<button class="btn btn-default" type="button" onclick="top.location = '{{ WEB_ROOT }}/admin/product/list?{{ param.parameter }}'">Cancel</button>
							</div>
						</div>
						
					</form>
				</div>

			</div>
		</section>
	</div>
</div>

{% endblock %} 

{% block js%}
<script src="{{ ASSET_ROOT }}/admin/assets/ckeditor/ckeditor.js"></script>
<script>	
	var saveProc = function(){
		var frm = document.productForm;

		var imgs = ["thumbnailImage", "mainImage", "image1", "image2", "image3"];
		for(i in imgs){
			if(frm[imgs[i]] && frm[imgs[i]].value !== ""){
				if (frm[imgs[i]].value.match(/(.jpg|.jpeg|.gif|.png)$/i) === null){
					showAlert("Alert", "Only (.gif, .jpg, .png).", "document.productForm['"+imgs[i]+"'].focus()", true);
					return;
				}
			}
		}

		if(frm.brochure && frm.brochure.value !== ""){
			if (frm.brochure.value.match(/(.pdf)$/i) === null){
				showAlert("Alert", "Only (.pdf).", "document.productForm['brochure'].focus()", true);
				return;
			}
		}
		if(frm.attachment && frm.attachment.value !== ""){
			if (frm.attachment.value.match(/(.pdf|.zip|.rar)$/i) === null){
				showAlert("Alert", "Only (.pdf, .zip, .rar).", "document.productForm['attachment'].focus()", true);
				return;
			}
		}
					
		frm.encoding		= "multipart/form-data";
		frm.submitHandler.click();
	}	

	var deletedFiles = [];
	var deleteFile = function(fileSeq, id){
		showAlert("Confirm file deletion", "Are you sure you want to delete this file?", "deleteFileProc('"+fileSeq+"', '"+id+"');");
	}
	var deleteFileProc = function(fileSeq, id){
		console.log("delete called");
		var frm = document.productForm;

		deletedFiles.push(fileSeq);
		frm.deletedFiles.value = deletedFiles.join();			

		var fc;
		if(id==="brochure"){
			fc	= '<input type="file" id="'+id+'" name="'+id+'" title="'+id+'" />';
			fc	+= '<p class="help-block">*Only (PDF).</p>';
		}else if(id==="attachment"){
			fc	= '<input type="file" id="'+id+'" name="'+id+'" title="'+id+'" />';
			fc	+= '<p class="help-block">*Only (PDF, ZIP, RAR).</p>';		
		}else{
			fc	 = '<p style="display:none"><img src="" id="img'+id+'" alt="'+id+'"/></p>';
			fc	+= '<input type="file" id="'+id+'" name="'+id+'" title="'+id+'" />';
			fc	+= '<p class="help-block">*Only (GIF, JPG, PNG).</p>';
		}

		$(".fileList."+id).html(fc);
	}
	
	
	var readURL = function(input, id) {

		if (id==undefined) return;
		console.log("called");
		
	    if (input.files && input.files[0]) {
	        var reader = new FileReader();
	        reader.onload = function (e) {
	            $("#img"+id).attr("src", e.target.result);
	            $("#img"+id).attr("style", "max-width: 200px;");
	            $("#img"+id).parent().fadeIn();
	        }
	        reader.readAsDataURL(input.files[0]);
	    }
	}

	$(document).ready(function(){
		CKEDITOR.replace("description");
		$(".fileList").on("change", "#thumbnailImage, #mainImage, #image1, #image2, #image3", function(){
			var id = $(this).attr("id");
		    readURL(this, id);
		});
		
		{% for i in errors %}
			$("#{{ i.propertyPath }}").parent().addClass("has-error");
			$("#{{ i.propertyPath }}").parent().find(".help-block").html("{{ i.message }}");
		{% endfor %}
	});	
</script>
{% endblock %}